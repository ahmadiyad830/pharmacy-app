<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/selector_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/top_and_bottom_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/selector_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ExpandedAppbar"   parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CollapsedAppbar" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="myStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:colorPrimary">@color/main_color</item>
        <item name="colorSecondary">@color/top_and_bottom_color</item>
        <item name="colorAccent">@color/text_color</item>
        <item name="colorPrimaryDark">@color/icon_color</item>
        <item name="android:colorPrimaryDark">@color/selector_color</item>
    </style>

</resources>